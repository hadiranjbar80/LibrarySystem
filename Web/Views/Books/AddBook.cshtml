@model BookDto
@{
    ViewData["Title"] = "افزودن کتاب";
}
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">افزودن کتاب</h3>
    </div>
    <form asp-action="AddBook" method="post">
        <div class="card-body">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Code"></label>
                        <input readonly id="code" asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Author"></label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Publisher"></label>
                        <input asp-for="Publisher" class="form-control" />
                        <span asp-validation-for="Publisher" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-6">
                    <label asp-for="CategoryId"></label>
                    <select class="form-control" id="categoryId" name="categoryId">
                        <option value="" selected>انتخاب دسته‌بندی</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <input type="submit" class="btn btn-info" value="ثبت" />
                    <a asp-action="Index" class="btn btn-outline-danger">بازگشت</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script src="/js/site.js"></script>
}