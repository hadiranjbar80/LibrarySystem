@model EditUserProfileInfoViewModel

<form class="form-horizontal" method="post" asp-action="EditProfile" asp-controller="Profile" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="FirstName" class="col-sm-2 control-label"></label>

        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control" id="inputName" placeholder="نام">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="col-sm-2 control-label"></label>

        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control" id="inputEmail" placeholder="نام خانوادگی">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="UserName" class="col-sm-2 control-label"></label>

        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control" id="inputName2" placeholder="نام کابری">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-sm-2 control-label"></label>

        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="آدرس"/>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate" class="col-sm-2 control-label"></label>

        <div class="col-sm-10">
            <input asp-for="BirthDate" type="text" data-jdp class="form-control" placeholder="تاریخ تولد">
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="File" class="col-sm-2 control-label"></label>

        <div class="col-sm-10">
            <input asp-for="File" class="form-control">
            <span asp-validation-for="File" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-warning">ویرایش</button>
        </div>
    </div>
</form>