@model List<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "لیست نقش‌ها";
}

<p>
    <button class="btn btn-primary" onclick="AddRole()">افزودن نقش</button>
</p>

@if (!Model.Any())
{
    <h1>مقامی یافت نشد</h1>
}
else
{

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">لیست نقش‌ها</h3>
            <div class="card-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                    <input type="text" name="table_search" class="form-control float-right" placeholder="جستجو" />

                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>عنوان</th>
                        <th></th>
                    </tr>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td>@Model[i].Name</td>
                            <td>
                                <form asp-controller="ManageRoles" asp-action="DeleteRole" method="post" asp-route-id="@Model[i].Id">
                                    <button type="button" class="btn btn-warning" onclick="EditRole('@Model[i].Id')"><i class='fa fa-pencil'></i></button>
                                    <button type="submit" class="btn btn-danger"><i class='fa fa-trash-o'></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>


}




<partial name="_Modal" />

@section Scripts {
    <script src="~/js/site.js"></script>
}